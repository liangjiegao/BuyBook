<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/login_main_rl"
    android:background="@mipmap/login_background"
    >
    <LinearLayout
        android:id="@+id/loge_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@+id/get_host_post"
        >

        <LinearLayout
            android:id="@+id/login_ll_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user_name_input"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/username"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />
            <EditText
                android:id="@+id/login_et_userName"
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:hint="用户名"
                android:textColorHint="@color/gray"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@null"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_ll_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user_name_input"
            android:layout_below="@+id/login_ll_userName"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/password"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />
            <EditText
                android:id="@+id/login_et_password"
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:hint="密码"
                android:textColorHint="@color/gray"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@null"
                android:password="true"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_bt_register"
            >
            <Button
                android:id="@+id/login_bt_login"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="@string/login_text"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_button"
                />

            <TextView
                android:id="@+id/login_bt_forgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="忘记密码？"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />
    <EditText
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/host"
        />
    <Button
        android:id="@+id/get_host_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取"
        android:layout_below="@+id/post"
        android:background="@null"
        />
</RelativeLayout>
