<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f0f0"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/item_book_img"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/submit_background"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            >
            <TextView
                android:id="@+id/item_book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android从入门到放弃"
                android:textColor="#4b4a4a"
                android:textSize="17sp"
                />
            <TextView
                android:id="@+id/item_book_newprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_book_title"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textColor="#ea5f31"
            />
            <RelativeLayout
                android:id="@+id/item_book_price_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/item_book_newprice"
                >
                <TextView
                    android:id="@+id/item_book_oldprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="#ea5f31" />
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="2px"
                    android:background="#000"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/item_book_price_rl"
                >
                <ImageButton
                    android:id="@+id/item_book_reduce"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/reduce"
                    android:background="@null"
                    />
                <TextView
                    android:id="@+id/item_book_num"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:gravity="center"
                    />
                <ImageButton
                    android:id="@+id/item_book_add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/add"
                    android:background="@null"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
